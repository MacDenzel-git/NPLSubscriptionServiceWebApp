@model NPLSubscriptionServiceWebApp.Models.ViewModels.SubscriptionTypeViewModel
@{
    ViewData["Title"] = "Update";
}
<nav aria-label="breadcrumb" role="navigation">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Home</a></li>
        <li class="breadcrumb-item"><a asp-action="Index">Subscription Type</a></li>
        <li class="breadcrumb-item active" aria-current="page">Update</li>
    </ol>
</nav>

<h1>Update</h1>

<div class="card">
    <div class="card-header">

        <div class="row">
            <div class="col-12 text-right">
                <a asp-action="Index" class="btn btn-sm btn-simple m-2 animation-on-hover">  <i class="tim-icons icon-bullet-list-67"></i> Back</a>
            </div>
        </div>
    </div>
    <div class="card-body">
        @if (Model.OutputHandler.IsErrorOccured)
        {
            <h4 class="text-danger font-weight-bold p-3">@Model.OutputHandler.Message</h4>
        }
        else if (Model.OutputHandler.Message != null)
        {
            <h4 class="text-success font-weight-bold p-3">@Model.OutputHandler.Message</h4>
        }
        <form asp-action="Update" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-row ">
                <input asp-for="@Model.SubscriptionType.CreatedBy" hidden />
                <input asp-for="@Model.SubscriptionType.CreatedDate" hidden />
                <input asp-for="@Model.SubscriptionType.SubscriptionTypeId" hidden />
                <div class="form-group col-md-4">
                    <label>Subscription Name</label>
                    <div class="input-group">
                        <input type="text" class="form-control" asp-for="@Model.SubscriptionType.SubscriptionName" placeholder="Enter Subscription Name" required>
                        <span asp-validation-for="@Model.SubscriptionType.SubscriptionName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group col-md-4">
                    <label>Subscription Fee</label>
                    <div class="input-group">
                        <input type="text" class="form-control" asp-for="@Model.SubscriptionType.SubscriptionFee" placeholder="Enter Subscription Fee" required>
                        <span asp-validation-for="@Model.SubscriptionType.SubscriptionFee" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group col-md-4">
                    <label>Subscription Name</label>
                    <div class="input-group">
                        <input type="text" class="form-control" asp-for="@Model.SubscriptionType.Duration" placeholder="Enter Duration e.g 1,2,6" required>
                        <span asp-validation-for="@Model.SubscriptionType.Duration" class="text-danger"></span>
                    </div>
                </div>

            </div>
            <div class="form-row ">
                <div class="form-group col-md-4">
                       <label>Check the Box if this is a Monthly Subscription, Leave it clear for weekly </label> 
                    <input class="form-check-input ml-3" asp-for="SubscriptionType.IsCalculationTypeMonths" /> 
                </div>
            </div>

            <button type="submit" class="btn btn-primary">Save</button>
        </form>
    </div>
</div>
