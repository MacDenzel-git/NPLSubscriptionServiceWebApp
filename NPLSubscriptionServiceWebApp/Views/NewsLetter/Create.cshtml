@model NPLSubscriptionServiceWebApp.Models.ViewModels.NewsLetterViewModel
@{
    ViewData["Title"] = "Create";
}
<nav aria-label="breadcrumb" role="navigation">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Home</a></li>
        <li class="breadcrumb-item"><a asp-action="Index">News Letter</a></li>
        <li class="breadcrumb-item active" aria-current="page">Create</li>
    </ol>
</nav>

<h1>Create</h1>

<div class="card">
    <div class="card-header">

        <div class="row">
            <div class="col-12 text-right">
                <a asp-action="Index" class="btn btn-sm btn-simple m-2 animation-on-hover">  <i class="tim-icons icon-bullet-list-67"></i> Back</a>
            </div>
        </div>
    </div>
    <div class="card-body">
        @if (Model.OutputHandler.IsErrorOccured)
        {
            <h4 class="text-danger font-weight-bold p-3">@Model.OutputHandler.Message</h4>
        }
        else if (Model.OutputHandler.Message != null)
        {
            <h4 class="text-success font-weight-bold p-3">@Model.OutputHandler.Message</h4>
        }
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
             
            <div class="form-row ">
                 
                <div class="form-group col-md-4">
                    <label>Date of Release</label>
                    <div class="input-group">
                        <input type="date" class="form-control" asp-for="@Model.NewsLetter.PaperDated"   required>
                        <span asp-validation-for="@Model.NewsLetter.PaperDated" class="text-danger"></span>
                    </div>
                </div>
                
            </div> 
            <div class="form-row ">
                <div class="form-group col-md-4">
                    <label>Publication</label>
                    <div class="input-group">
                        <select class="form-control form-control-sm" required asp-for="@Model.NewsLetter.PublicationId"
                                asp-items="@(new SelectList(Model.Publications, "PublicationId", "PublicationTitle") )"></select>
                    </div>
                </div> 
                <div class="form-group col-md-4">
                    <label>Choose File</label>
                    <div class="input-group">
 
                    </div>
                </div>
            </div>
                   
                     <input class="pt-2 btn btn-outline-info btn-sm text-dark" id="pdfDoc" type="file" name="pdfDoc" accept="application/pdf" required />

            <button type="submit" class="btn btn-primary">Save</button>
        </form>
    </div>
</div>